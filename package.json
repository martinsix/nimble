{
  "name": "@nimble/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/api",
    "packages/shared"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@nimble/web",
    "dev:api": "turbo dev --filter=@nimble/api",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:ui": "turbo test:ui",
    "test:run": "turbo test:run",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "turbo": "^2.3.3"
  },
  "packageManager": "npm@10.8.2"
}
